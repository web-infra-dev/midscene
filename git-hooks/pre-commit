#!/bin/bash

# Gets a list of changed files
changed_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|json|html|css|scss|md)$')

if [ -z "$changed_files" ]; then
    echo "No Python files to check."
    exit 0
fi

# Run biome to check for changed files
echo "Running Biome on changed files..."
biome check $changed_files

# Check biome's exit status
if [ $? -ne 0 ]; then
    echo "Biome checks failed."
    exit 1
fi

echo "Biome checks passed."
exit 0
