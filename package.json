{
  "name": "midscene",
  "private": true,
  "version": "0.1.4",
  "scripts": {
    "build:pkg": "nx run-many --target=build --projects=@midscene/core,@midscene/visualizer,@midscene/web --verbose",
    "test": "nx run-many --target=test --projects=@midscene/core,@midscene/visualizer,@midscene/web --verbose",
    "e2e": "nx run-many --target=e2e --projects=@midscene/core,@midscene/visualizer,@midscene/web --verbose",
    "prepare": "pnpm run build:pkg && simple-git-hooks",
    "check-dependency-version": "check-dependency-version-consistency .",
    "lint": "biome lint --changed --diagnostic-level=warn --fix --no-errors-on-unmatched",
    "format:ci": "pretty-quick --since HEAD~1",
    "format": "pretty-quick --staged",
    "commit": "cz"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*.{md,mdx,json,css,less,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "biome check --changed --write --formatter-enabled=false --linter-enabled=false --no-errors-on-unmatched",
      "prettier --write"
    ],
    "package.json": "pnpm run check-dependency-version"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "engines": {
    "pnpm": ">=9.3.0",
    "node": ">=18.19.0"
  },
  "packageManager": "pnpm@9.3.0",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "2.24.1",
    "@commitlint/cli": "^17.0.3",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "chalk": "4.1.2",
    "commitizen": "4.2.5",
    "dayjs": "1.11.11",
    "execa": "4.1.0",
    "minimist": "1.2.5",
    "pretty-quick": "3.1.3",
    "check-dependency-version-consistency": "^4.1.0",
    "semver": "7.3.7",
    "nano-staged": "^0.8.0",
    "nx": "^19.5.4",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1"
  }
}
