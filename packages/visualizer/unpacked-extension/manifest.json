{
  "name": "Midscene",
  "description": "Interacting with, querying, and asserting web pages using AI through natural language.",
  "version": "0.3",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "sidePanel",
    "debugger"
  ],
  "background": {
    "service_worker": "./lib/worker.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Midscene.js Playground"
  },
  "side_panel": {
    "default_path": "./pages/sidepanel.html"
  },
  "icons": {
    "128": "icon.png"
  }
}