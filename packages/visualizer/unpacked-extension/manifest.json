{
    "name": "Midscene",
    "description": "Transform UI automation into a joyful experience with Midscene, enabling seamless interaction through natural language.",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "sidePanel",
        "debugger"
    ],
    "background": {
        "service_worker": "./lib/worker.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_title": "Midscene.js Playground"
    },
    "side_panel": {
        "default_path": "./pages/sidepanel.html"
    },
    "icons": {
        "128": "icon.png"
    }
}