{
  "name": "Midscene.js",
  "description": "Open-source SDK for automating web pages using natural language through AI.",
  "version": "0.13",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "sidePanel",
    "debugger"
  ],
  "background": {
    "service_worker": "./lib/worker.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Midscene.js Playground"
  },
  "side_panel": {
    "default_path": "./pages/sidepanel.html"
  },
  "icons": {
    "128": "icon.png"
  }
}