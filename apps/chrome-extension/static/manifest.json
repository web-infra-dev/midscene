{
  "name": "Monday Quality Magician",
  "description": "Open-source SDK for automating web pages using natural language through AI.",
  "version": "0.70",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "sidePanel",
    "debugger"
  ],
  "incognito": "split",
  "background": {
    "service_worker": "./scripts/worker.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Monday Quality Magician",
    "default_icon": "mndy.png"
  },
  "side_panel": {
    "default_path": "./index.html"
  },
  "icons": {
    "128": "mndy.png"
  }
}